EXERCÍCIO 1
<html>
    <html lang="pt-br"></html>
<head>
    <title>Lista JS</title>
    <script type="text/javascript">
        function ex1() {
        var numero = 101;
        var contador = 0;
        while (contador < 10) {
            document.write(numero + "<br>"); 
            numero++;
            contador++;
        }
    }
</script>
</head>
<body>
    <h1>Exercício 1</h1>
    <button onclick="ex1()">Imprimir</button>
</body>
</html>

EXERCÍCIO 2
<html>
<head>
    <title>lista js</title>
    <script type="text/javascript">
        function ex2() {
            var n1 = parseInt(document.getElementById("n1").value);
            var n2 = parseInt(document.getElementById("n2").value); 
            var n3 = parseInt(document.getElementById("n3").value);
            var maiorNumero;

            if (n1 > n2 && n1 > n3) {
                maiorNumero = n1;
            } else if (n2 > n1 && n2 > n3) {
                maiorNumero = n2;
            } else {
                maiorNumero = n3;
            }

            alert("O maior número é: " + maiorNumero);
        }
    </script>
</head>
<body>
    <h1>Maior Número Inteiro</h1>
    <label for="n1">Número 1: </label>
    <input type="number" id="n1"><br>
    <label for="n2">Número 2: </label>
    <input type="number" id="n2"><br>
    <label for="n3">Número 3: </label>
    <input type="number" id="n3"><br>
    <button onclick="ex2()">Encontrar Maior Número</button>
</body>
</html>

EXERCÍCIO 3
<!DOCTYPE html>
<html>
<head>
    <title>lista js</title>
    <script type="text/javascript">
        function ex3() {
            var n1 = parseInt(document.getElementById("n1").value);
            var n2 = parseInt(document.getElementById("n2").value); 
            var n3 = parseInt(document.getElementById("n3").value);
            var maior;
            var menor;
            
            if (n1 >= n2 && n1 >= n3) {
                maior = n1;
            } else if (n2 >= n1 && n2 >= n3) {
                maior = n2;
            } else {
                maior = n3;
            }
            if (n1 <= n2 && n1 <= n3) {
                menor = n1;
            } else if (n2 <= n1 && n2 <= n3) {
                menor = n2;
            } else {
                menor = n3;
            }
        
            alert("O maior número é: " + maior + "\nO menor número é: " + menor);
        }
    </script>
</head>
<body>
    <h1>Maior e Menor Número Inteiro</h1>
    <label for="n1">Número 1: </label>
    <input type="number" id="n1"><br>
    <label for="n2">Número 2: </label>
    <input type="number" id="n2"><br>
    <label for="n3">Número 3: </label>
    <input type="number" id="n3"><br>
    <button onclick="ex3()">Encontrar o maior e o menor números</button>
</body>
</html>

